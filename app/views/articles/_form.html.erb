
<%= form_for(@article, :html => { :multipart => true, :class => "form-horizontal center" })  do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>

  <p>
    <%= f.label :title, "Title" ,:class => "col-md-4 col-sm-2 control-label" %>
<br/>
    <%= f.text_field :title ,:class => "col-md-4 col-sm-2 control-label", class: 'fields' %>
  </p><br />
  <p>
    <%= f.label :body, "Description",:class => "col-md-4 col-sm-2 control-label" %><br/>
    <%= f.text_area :body,:class => "col-md-4 col-sm-2 control-label", class: 'fields' %>
  </p><br />
  <p>
      <%= file_field_tag "photos[]", type: :file, multiple: true %>
  </p>
  <p>
    <%= f.submit 'Submit',class: "btn btn-default btn-primary" %>
  </p>

<% end %>