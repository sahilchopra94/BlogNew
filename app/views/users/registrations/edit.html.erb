

<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email,class: 'label_text' %><br />
    <%= f.email_field :email, autofocus: true, class: 'fields' %>
  </div><br />

  <div class="field" class="col-xs-12">
    <%= f.label :username, class: 'label_text'  %><br />
    <%= f.text_field :username, autofocus: true, class: 'fields' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password,class: 'label_text' %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: 'fields ' %>
    <% if @minimum_password_length %>
      <em class="label_text"><%= @minimum_password_length %> characters minimum</em><br />
    <% end %>
  </div><br />

  <div class="field">
    <%= f.label :password_confirmation,class: 'label_text' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'fields ' %>
  </div><br />

  <div class="field">
    <%= f.label :current_password,class: 'label_text' %> <i class="label_text">(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: 'fields ' %>
  </div><br />

<div>
    <%= f.file_field :image %>
  </div>

  <div class="actions">
  <div class="fields">
    <%= f.submit "Update",class:'btn btn-primary' %>
  </div></div><br />
<% end %>

<h3 class="label_text">Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class:'btn btn-primary' %></p>
<div class="a:link">
<%= link_to "Back", :back,class:'btn btn-primary' %></div>
