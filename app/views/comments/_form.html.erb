<style>
.fields{
  float: left;
   width: 60%; 
   display: block;
   color: black;
   z-index: 2
   }
a:link {
    text-decoration: none;
    color: white
}
</style>
<h3>Post a Comment</h3>

<%= form_for [@article, @comment] do |f| %>
 <ul>
  <% @comment.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul> 
  <p>
    <%= f.label :body, "Your Comments" %><br/>
    <%= f.text_area :body, class: 'fields' %>
  </p><br />
  <p>
    <%= f.submit 'Submit',class: 'btn btn-primary btn-xs' %>
  </p>
<% end %>