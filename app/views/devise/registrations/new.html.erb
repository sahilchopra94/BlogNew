
<div id="background">
  <div class="layer"></div>
</div>
<body>
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name) ) do |f| %>
  <%= devise_error_messages! %>

  <div class="field" class="col-xs-12">
    <%= f.label :email, class: 'label_text' %><br />
    <%= f.email_field :email, autofocus: true, class: 'fields' %>
  </div><br /><br />

  <div class="field" class="col-xs-12">
    <%= f.label :username, class: 'label_text'  %><br />
    <%= f.text_field :username, autofocus: true, class: 'fields' %>
  </div>

  <div class="field" class="col-xs-12">
    <%= f.label :password, class: 'label_text' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'fields' %>
  </div><br />

  <div class="field" class="col-xs-12">
    <%= f.label :password_confirmation, class: 'label_text' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'fields' %>
  </div><br />
  <div class="col-xs-12">
    <%= f.file_field :image %>
  </div><br />

  <div class="actions" class="col-xs-12" >
   <div class="fields">
    <%= f.submit "Sign up",class:'btn btn-primary' %>
  </div></div>
<% end %>
<div class="a:link">
<button style="border:1px solid black; background-color: transparent;">
<%= render "devise/shared/links" %></button></div>
